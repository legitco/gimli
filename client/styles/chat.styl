stripe(even = #fff, odd = #eee)
  .row
    background-color odd
    &.even
    &:nth-child(even)
      background-color even
      
.body 
  position relative
          
  .chat
    stripe()
    .row
      padding 1em 0;
      aside
        address
          margin 0;
        time
          font-size .9em
          color lighten(#000, 40)
    form.row
      padding 0
      input
        line-height 2em
      button
        line-height 2em
            
          
  .panel
    background-color #f2f5fa
    position absolute
    right 0
    height 100%
    ol
      padding-left 0
      li
        list-style none
        margin 1em
        color #1061A3
        img
          width 64px
          height 64px
          margin-right 2em
          float left
        h3
          font-size 1em
          font-weight normal
          padding-top .2em
        h4
          font-size 1em
          font-weight normal
          color #aaa
        h5
          float right
        