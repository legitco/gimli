.clear-both
  clear: both

.chat-view
  display: flex
  height: 100%

// --------

.col
  flex: 0 1 auto
  border-right: 1px solid rgba(0,0,0,.2)

  &:last-child
    border-right: none

  &.left
    width 61px
    rgba(0,0,0,.1) /* need 1px extra to account for the border */
  &.right
    width: 250px
    background: rgba(0,0,0,.05)
  &.middle
    flex: 1 1 auto

// --------

.user-icon
  background: #eee
  border-radius: 3px
  border: 1px solid #ddd
  height: 50px
  margin: 5px
  width: 50px

// --------

.chat
  display: flex
  flex-direction: column-reverse

  .message-container
    flex: 1 1 auto
    overflow-y: auto
    flex-direction: column
    align-items: stretch
    justify-content: flex-end
    display: flex

  .message-frame

  .message-list
    flex-direction: column
    align-items: stretch
    justify-content: flex-end
    display: flex

  .message
    flex: 0 0 auto
    border-top: 1px solid rgba(255,0,0,.2)
    min-height: calc(2rem + 10px)
    padding: 5px

  .input
    flex: 0 0 auto
    /*border-top: 1px solid rgba(0,0,0,.2)*/
    height: 40px
    display: flex

    button
      height: 40px
      width: 40px
      text-indent: -10000px
      background: hsla(200,80%,60%,1)
      border: none
      flex: 0 0 auto
      padding: 0
      margin: 0
      outline: none
      border: 1px solid transparent

      &:focus
        outline: none
        border: 1px solid rgba(0,0,0,.25)
        box-shadow: inset 0 0 5px rgba(0,0,0,.25)

    textarea
      flex: 1 1 auto
      padding: 0
      margin: 0
      border: none
      margin: 0
      resize: none
      padding: 5px
      border: 1px solid transparent
      border-top: 1px solid rgba(0,0,0,.1)

      &:focus
        outline: none
        border: 1px solid lightblue
        box-shadow: inset 0 0 5px rgba(0,150,255,.2)
        background: rgba(0,150,255,.05)
        outline-offset: 0

// --------
/* List of users in the right column */
.user-list

  /* Container for an individual user */
  .user
    margin: 5px
    padding: 5px 0
    background: #eee
    border-radius: 6px

  /* Individual user's icon */
  .icon
    height: 30px
    width: 30px
    border-radius: 3px
    background: salmon
    float: left
    margin: 0 5px

  /* Individual user's name */
  .name
    font-size: 1.1rem
    color: rgba(0,0,0,.6)

  /* Individual user's username */
  .username
    font-size: .8rem
    color: rgba(0,0,0,.4)

  /* Prefix user's username with @ 'cause its all the rage */
  .username:before
    content: "@"

