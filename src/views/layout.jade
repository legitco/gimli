doctype html
html
  head
    title #{title} - My Site
    //- link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      H1 My Site
    .container
      .main-content
        block content
      .sidebar
        if user
          dt ID
          dd= user.id
          dt Display Name
          dd= user.displayName
          dt User Name
          dd= user.username
        else
          a(href="/auth/github") Login
        block sidebar
    footer
      p Running on node with Express, Jade and Stylus
    script(type='text/javascript' src="/static/vendor/angular/angular.js")
