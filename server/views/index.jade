doctype html
html(ng-app="gimli")
  head
    title #{title} - Gimli
    link(rel='stylesheet', href='/static/vendor/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/static/vendor/bootstrap/dist/css/bootstrap-theme.css')
    link(rel='stylesheet', href='/static/vendor/highlightjs/styles/github.css')
    link(rel='stylesheet', href='/static/styles/global.css')
    script(type='text/javascript' src="/static/vendor/jquery/dist/jquery.min.js")
    script(type='text/javascript' src="/static/vendor/bootstrap/dist/js/bootstrap.js")
    script(type='text/javascript' src="/faye/client.js")
    script(type='text/javascript' src="/static/vendor/marked/lib/marked.js")
    script(type='text/javascript' src="/static/vendor/highlightjs/highlight.pack.js")
    script(type='text/javascript' src="/static/vendor/angular/angular.js")
    script(type='text/javascript' src="/static/vendor/angular-marked/angular-marked.js")
    script(type='text/javascript' src="/static/vendor/angular-ui-router/release/angular-ui-router.js")
    script(type='text/javascript' src="/static/vendor/angular-faye/build/angular-faye.js")
  body
    nav.collapse.navbar-collapse.bs-navbar-collapse(role="navigation")
      .container-fluid
        //- Brand and toggle get grouped for better mobile display
        button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(ui-sref="index") Gimli
        //- Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(ui-sref="issues({owner: 'legitco', repo: 'gimli'})")
                span.octicon.octicon-issue-opened
                | &nbsp;Issues
          ul.nav.navbar-nav.navbar-right
            li
              if user
                a(href="/logout" target="_self") Logout
              else
                a(href="/login" target="_self") Login
    div(ui-view)


    footer
      .jumbotron-sm
        .container
          | Running on node with Express, Jade and Stylus

    script(type='text/javascript' src="/static/scripts/app.js")
